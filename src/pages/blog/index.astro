---
import { Image } from 'astro:assets'
import FormattedDate from '../../components/ui/FormattedDate.astro'
import AppPage from '../../layouts/AppPage.astro'
import Content from '../../layouts/Content.astro'
import { SITE_TITLE } from '@src/consts'
import Spacer from '@src/components/ui/Spacer.astro'
import { truncateDescription } from '@components/hooks/truncateDescription'
import { posts } from '@components/hooks/fetchPosts.ts'
import TagIcon from '@src/components/ui/TagIcon.astro'
---

<AppPage title={`${SITE_TITLE} - Návody, Články, Tvorba webu`}>
  <Content class="py-10">
    <ul class="fadeIn grid w-full grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
      {
        posts.map((post) => (
          <li class="post_project w-full translate-y-10 rounded-2xl border border-primary_light p-4 duration-300 hover:bg-primary_light/20 opacity-0">
            <a href={`/blog/${post.slug}/`} class="block">
              <div class="h-52 w-full overflow-hidden rounded-xl  shadow-primary_dark outline outline-4 outline-primary_light">
                <Image
                  format="avif"
                  quality="low"
                  width={1280}
                  height={720}
                  src={post.data.heroImage}
                  alt=""
                  class="mb-2 h-full w-full rounded-2xl object-cover"
                />
              </div>
              <article class="mt-5">
                <p class="text-center text-gray-400">
                  <FormattedDate date={post.data.pubDate} />
                </p>
                <h4 class="text-center text-xl">{post.data.title}</h4>
                <div class="overflow-hidden">
                  <TagIcon
                    tags={post.data.tags}
                    iconClass="w-6 h-6"
                    class="post_skills translate-y-full pt-4 opacity-0"
                  />
                </div>
              </article>
              <Spacer class="my-4" />
              <p class="text-gray-300">{truncateDescription(post.data.description, 200)}</p>
            </a>
          </li>
        ))
      }
    </ul>
  </Content>
</AppPage>

<script src="../../animation/animatePostPage.ts"></script>
