---
import '../styles/global.style.css'
import BaseHead from "@src/components/seo/BaseHead.astro";
import Header from "@components/header/Header.astro";
import Footer from "@components/footer/Footer.astro";
import BtnTop from "@src/components/ui/BtnTop.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import SpriteProvider from "node_modules/astro-icon/lib/SpriteProvider.astro";

const title = Astro.props.title || `${SITE_TITLE} - Osobn√≠ web & blog`;
---

<html lang="en" class="scroll-smooth">
  <head>
    <BaseHead title={title} description={SITE_DESCRIPTION} />
  </head>
  <body
    class="w-full min-h-screen bg-primary_black text-primary_white flex flex-col relative"
  >
    <SpriteProvider>
      <Header />
      <main class="flex flex-1">
        <slot />
      </main>
      <Footer />
      <BtnTop />
    </SpriteProvider>
  </body>
</html>
