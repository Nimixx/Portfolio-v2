---
// Import Components
import { project } from '@components/hooks/fetchProject'
import FormattedDate from '@src/components/ui/FormattedDate.astro'
// Utils
import { Image } from 'astro:assets'
// Constants
const slicedPosts = project.slice(0, 6)
---

<ul
  class="grid w-full grid-cols-1 gap-6 pt-2 fadeIn md:grid-cols-2 lg:grid-cols-3"
>
  {
    slicedPosts.map((project) => (
      <li class="w-full rounded-2xl border border-primary_light p-4 transition-colors duration-200 hover:bg-primary_light/20">
        <a href={`/project/${project.slug}/`} class="flex flex-col gap-4">
          <section class="relative h-52 w-full overflow-hidden rounded-2xl">
            <Image
              format="avif"
              quality="mid"
              width={1280}
              height={720}
              src={project.data.heroImage}
              alt=""
              class="h-full w-full object-cover"
            />
            <article class="absolute left-0 top-0 flex h-full w-full flex-col items-center justify-center gap-2 bg-gradient-to-t from-primary_dark to-primary_light/10">
              <h4 class="text-center text-4xl font-bold ">{project.data.title}</h4>
              <p class="text-center text-secondary">
                <FormattedDate date={project.data.pubDate} />
              </p>
            </article>
          </section>
        </a>
      </li>
    ))
  }
</ul>
