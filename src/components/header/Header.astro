---
// Components
import SiteName from './SiteName.astro'
import Navigation from './Navigation.astro'
import SocialList from '@components/ui/SocialList.astro'
---

<script src="../hooks/useHeaderScroll.ts"></script>

<header
  class="bg-primary_black/50 sticky top-0 z-50 w-full border-b border-primary_light bg-primary_dark/80 px-5 shadow shadow-primary_dark backdrop-blur-lg xl:px-0 flex items-center"
>
  <section class="flex h-14 w-full items-center justify-between xl:mx-auto xl:w-2/3">
    <SiteName />
    <Navigation />
    <section class="hidden items-center gap-6 md:flex">
      <SocialList listClass="hidden md:flex" />
    </section>
  </section>
</header>
