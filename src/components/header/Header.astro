---
import SiteName from './SiteName.astro'
import Navigation from './Navigation.astro'
import SocialList from '@components/ui/SocialList.astro'
---

<header class="sticky top-0 z-50 w-full bg-primary_black/50 px-5 backdrop-blur-lg xl:px-0">
	<section class="mx-auto flex h-16 w-full items-center justify-between xl:w-2/3">
		<SiteName />
		<Navigation />
		<SocialList
			iconClass="w-5 h-5 text-gray-400 hover:text-white transition-colors duration-300"
			listClass="hidden md:flex"
		/>
	</section>
</header>

<script src="@components/hooks/headerScroll.ts"></script>
